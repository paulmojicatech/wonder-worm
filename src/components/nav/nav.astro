---
import {Image} from 'astro:assets';
import account_profile from '../../../public/images/icons/account_circle.svg';
import '../../styles/spacing.css';
---
<div class="nav-container">
  <div class="main-nav-items">
    <a class="mb-1rem" href="/">Home</a>
    <a class="mb-1rem" href="/math">Math</a>
    <a class="mb-1rem" href="/reading">Reading</a>
    <a href="/skills">Skills</a>
  </div>
  <div class="account">
    <Image src={account_profile} width={35} alt="Profile" />
  </div>  
</div>
<style>  
  .nav-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    background-color: #f2f2f2;
    padding: 1rem;
  }
  .main-nav-items {
    display: flex;
    flex-direction: column;    
  }
  .account {
    display: flex;
    justify-content: center;
    img {
      margin-left: 0;
    }
  }
  
  a {    
    text-decoration: none;
    color: #2d2d2d;        
  }
  :first-of-type a{
    padding-top: 0;
  }
</style>