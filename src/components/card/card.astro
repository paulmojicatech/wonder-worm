---
const { header, body } = Astro.props;
---

<div class="flex flex-col h-full rounded-xl shadow-lg p-6 transition-colors duration-300 card-bg">
  <div class="header text-xl font-bold text-indigo-700 dark:text-indigo-300 mb-2 px-2">
    <span>{header}</span>
  </div>
  {body &&
    <div class="body flex-1 overflow-auto text-gray-700 dark:text-gray-200 mb-2 px-2">
      <article>{body}</article>
    </div>
  }
  {!body &&
    <slot name="bodySlot"/>
  }
  <div class="action inline-flex w-full mt-2">
    <slot name="actionSlot"/>
  </div>
</div>
<style>
.card-bg {
  background-color: #fff;
  color: #222;
}
body.dark .card-bg {
  background: linear-gradient(135deg, #3a3b3f 0%, #5a5c60 100%);
  color: #e0e6ed;
}
</style>